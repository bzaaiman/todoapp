<h1>Here is the listed index</h1>

<p><%= link_to 'Create a new Todo', new_todo_path %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @todos.each do |t| %>
    <tr>
      <td><%= t.name %></td>
      <td><%= t.description %></td>
      <td><%= link_to 'Edit', edit_todo_path(t)%></td>
      <td><%= link_to 'Show', todo_path(t)%></td>
      <td><%= link_to 'Delete', todo_path(t), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
<br>